<% layout('layouts/boilerplate')%>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form action="/forgot" method="POST">
				<legend>Enter the email that you used to create your account</legend>
				<div class="form-group">
					<label for="email" class="mb-3">Email</label>
					<input type="email" name="email"  autofocus class="form-control mb-3" required>
				</div>
				<div class="form-group">
					<input type="submit" class="btn  btn-teal" value="Reset Password">
				</div>
			</form>
		</div>
	</div>
	
</div>
