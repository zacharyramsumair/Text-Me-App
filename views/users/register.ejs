<% layout('layouts/boilerplate')%>

<div class="container text-white">
    <h1>Register</h1>
    <form action="/register" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <div>
                <input class="form-control form-90" type="text" id="username" name="username" required>
            </div>
            
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <div>
                <input class="form-control form-90" type="email" id="email" name="email" required>
            </div>
            
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <div>
                <input class="form-control form-90" type="password" id="password" name="password" required>
                <i class="far fa-eye eye" id="togglePassword"></i>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success">Register</button>
    
    </form>
</div>

<script src="/javascripts/showPassword.js"></script>
