<% layout('layouts/boilerplate')%>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form action="/reset/<%= token %>" method="POST">
			  <legend>Reset Password</legend>
			  <div class="form-group mb-3">
				<label for="password">New Password</label>
				<div>
					<input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control form-90"/>
					<i class="far fa-eye eye" id="togglePassword"></i>
				</div>
				
			  </div>
			  <div class="form-group mb-3">
				<label for="confirm">Confirm Password</label>
				<div>
					<input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control form-90"/>
					<i class="far fa-eye eye" id="togglePassword"></i>
				</div>
			  </div>
			  <div class="form-group mb-3">
				<button type="submit" class="btn  btn-teal">Update Password</button>
			  </div>
			</form>
		</div>
	</div>
	
</div>

<script src="/javascripts/showPassword.js"></script>