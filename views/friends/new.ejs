
    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New friend</h1>
        <div class="col-6 offset-3">
            <form action="/friends" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="friend[name]" required>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="level">Level</label>
                        <select name="friend[level]" id="level" required>
                        <option value="">--Please choose an option--</option>
                        <option value="BFF">BFF</option>
                        <option value="Friend">Friend</option>
                        <option value="Acquaintance">Acquaintance</option>
                        <option value="Crush">Crush</option>
                    </select>
                    <!-- <input class="form-control" type="text" id="level" name="friend[level]" required> -->
                    <div class="valid-feedback">Looks good</div>

                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="friend[description]" required></textarea>
                    <div class="valid-feedback">Looks good</div>

                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add friend</button>
                </div>
            </form>
            <a href="/friends">All friends</a>
        </div>
    </div>






    