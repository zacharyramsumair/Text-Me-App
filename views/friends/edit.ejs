

    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit friend</h1>
        <div class="col-6 offset-3">
            <form action="/friends/<%=friend._id%>?_method=PUT" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="friend[name]"  required
                        value="<%=friend.name %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="level">Level: * URGENT * RESET THIS </label>
                    <select name="friend[level]" id="level" required>
                        <option value="<%=friend.level %>"><%=friend.level %></option>
                        <option value="2">BFF:2 days</option>
                        <option value="7">Friend:7 days</option>
                        <option value="35">Acquaintance: 35 days</option>
                        <option value="10">Crush:10 days</option>
                    </select>


                    <!-- <input class="form-control" type="text" id="level" name="friend[level]" required
                        value="<%=friend.level %>"> -->
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" required
                        name="friend[description]"><%= friend.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update friend</button>
                </div>
            </form>
            <a href="/friends/<%= friend._id%>">Back To friend</a>
    
        </div>
    </div>